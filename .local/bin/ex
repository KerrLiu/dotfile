#!/bin/bash

# @file         ex
# @author       ?
# @date         ...
# @pkgs         base tar bunzip zip 7zip rar
# @version      1.0

[ ! -f $1 ] && exit 1

case $1 in
	*.tar.bz2)      tar xjf $1;;
	*.tar.gz)       tar xzf $1;;
	*.bz2)          bunzip2 $1;;
	*.rar)          unrar x $1;;
	*.gz)           gunzip $1;;
	*.tar)          tar xf $1;;
	*.tbz2)         tar xjf $1;;
	*.tgz)          tar xzf $1;;
	*.zip)          unzip $1;;
	*.xz)           xz -d $1;;
	*.Z)            uncompress $1;;
	*.7z)           7z x $1;;
	*)              echo "'$1' cannot be extracted via ex" ;;
esac
